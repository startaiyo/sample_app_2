<div class="mistake"> 
<h1 class="heading">間違えた単語</h1>
<table class="container">
  <tr>
  <th>単語</th>
  <th>意味</th>
  <th>〇にする</th>
  <th>削除</th>
  </tr>
  <% @words.each do |i| %>
    <tr class=post-index-word>
      <td><%=i.word%></td>
      <td><%=i.meaning%></td>
      <td><%=link_to("〇","/#{i.id}/correct",{method:"post"})%></td>
      <td><%=link_to("削除","/posts/#{i.id}/destroy",{method:"post"})%></td>
    </tr>
  <% end %>
</table>
  <a href="/">トップに戻る</a>
</div>